<Window x:Class="FieldScan.ProbeManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="探头库管理" Height="450" Width="600">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel>
            <TextBlock Text="探头列表:" FontWeight="Bold"/>
            <ListView x:Name="ProbeListView" Height="300" Margin="0,5" SelectionChanged="ProbeListView_SelectionChanged">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="探头名称" DisplayMemberBinding="{Binding Name}"/>
                    </GridView>
                </ListView.View>
            </ListView>
            <StackPanel Orientation="Horizontal">
                <Button Content="添加" Margin="0,0,5,0" Width="60" Click="AddProbe_Click"/>
                <Button Content="删除" Width="60" Click="DeleteProbe_Click"/>
            </StackPanel>
        </StackPanel>

        <Grid Grid.Column="1" Margin="10,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="天线因子 (Antenna Factor):" FontWeight="Bold"/>
            <DataGrid x:Name="FactorDataGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,5">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="频率 (Hz)" Binding="{Binding FrequencyHz, StringFormat=G4}"/>
                    <DataGridTextColumn Header="因子 (dB/m)" Binding="{Binding FactorDb, StringFormat=F2}"/>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="导入校准文件 (.csv)" Margin="5" Click="ImportCsv_Click"/>
                <Button Content="关闭" IsCancel="True" Width="80" Margin="5"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>