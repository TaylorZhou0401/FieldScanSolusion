<Window x:Class="FieldScan.RobotControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FieldScan"
        mc:Ignorable="d"
        Title="机械臂控制" Height="250" Width="350" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="X 坐标:" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="txtX" Grid.Column="1" Margin="5" Text="0.0" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>

        <TextBlock Grid.Row="1" Text="Y 坐标:" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="txtY" Grid.Row="1" Grid.Column="1" Margin="5" Text="0.0" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>

        <TextBlock Grid.Row="2" Text="Z 坐标:" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="txtZ" Grid.Row="2" Grid.Column="1" Margin="5" Text="0.0" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>

        <UniformGrid Grid.Row="3" Grid.ColumnSpan="2" Columns="2" Margin="0,10,0,0">
            <Button Content="X+" Margin="5" PreviewMouseDown="StepButton_PreviewMouseDown" PreviewMouseUp="StepButton_PreviewMouseUp" Tag="X+"/>
            <Button Content="X-" Margin="5" PreviewMouseDown="StepButton_PreviewMouseDown" PreviewMouseUp="StepButton_PreviewMouseUp" Tag="X-"/>
            <Button Content="Y+" Margin="5" PreviewMouseDown="StepButton_PreviewMouseDown" PreviewMouseUp="StepButton_PreviewMouseUp" Tag="Y+"/>
            <Button Content="Y-" Margin="5" PreviewMouseDown="StepButton_PreviewMouseDown" PreviewMouseUp="StepButton_PreviewMouseUp" Tag="Y-"/>
            <Button Content="Z+" Margin="5" PreviewMouseDown="StepButton_PreviewMouseDown" PreviewMouseUp="StepButton_PreviewMouseUp" Tag="Z+"/>
            <Button Content="Z-" Margin="5" PreviewMouseDown="StepButton_PreviewMouseDown" PreviewMouseUp="StepButton_PreviewMouseUp" Tag="Z-"/>
        </UniformGrid>

        <Button Grid.Row="4" Grid.ColumnSpan="2" Content="确定" Margin="5" Click="OkButton_Click" HorizontalAlignment="Right" Width="80"/>

    </Grid>
</Window>