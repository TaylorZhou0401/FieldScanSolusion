<Window x:Class="FieldScan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FieldScan"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="FieldScan" Height="600" Width="1000"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <WindowChrome.WindowChrome>
        <WindowChrome ResizeBorderThickness="5" CaptionHeight="32" CornerRadius="0" GlassFrameThickness="0"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <Style x:Key="TitleBarButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E5E5E5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource TitleBarButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Red"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="TextBox" BasedOn="{StaticResource NumOnlyTextBoxEnterKey}"/>
        
        <Style x:Key="ToggleSwitchStyle" TargetType="CheckBox">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Border x:Name="BackgroundBorder" CornerRadius="15" Background="LightGray"/>
                            <Ellipse x:Name="Thumb" Fill="White" Width="26" Height="26" HorizontalAlignment="Left" Margin="2"/>
                            <TextBlock x:Name="Text" Text="反面" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,8,0" Foreground="White" FontSize="12"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="BackgroundBorder" Property="Background" Value="DodgerBlue"/>
                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="Text" Property="Text" Value="正面"/>
                                <Setter TargetName="Text" Property="HorizontalAlignment" Value="Left"/>
                                <Setter TargetName="Text" Property="Margin" Value="8,0,0,0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#CCCCCC" BorderThickness="1" Background="White">
        <DockPanel>
            <Grid DockPanel.Dock="Top" Height="32" Background="#F5F5F5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Image Source="/ico/em.ico" Margin="5" Grid.Column="0"/>
                <TextBlock Text="FieldScan" VerticalAlignment="Center" Margin="5,0,0,0" Grid.Column="1"/>

                <Button Content="机械臂控制"
                        Click="Button_Click_OpenControlWindow"
                        VerticalAlignment="Center"
                        Margin="15,0,0,0"
                        Width="100" Height="24" Grid.Column="2"
                        WindowChrome.IsHitTestVisibleInChrome="True"/>

                <Button Content="仪器连接" 
                        Click="InstrumentConnect_Click"
                        VerticalAlignment="Center" 
                        Margin="5,0,0,0" 
                        Width="80" Height="24" Grid.Column="3"
                        WindowChrome.IsHitTestVisibleInChrome="True"/>

                <Button Content="—" Click="MinimizeButton_Click" Grid.Column="5" Style="{StaticResource TitleBarButtonStyle}"/>
                <Button Content="☐" Click="MaximizeButton_Click" Grid.Column="6" Style="{StaticResource TitleBarButtonStyle}"/>
                <Button Content="✕" Click="CloseButton_Click" Grid.Column="7" Style="{StaticResource CloseButtonStyle}"/>
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <Grid>
                    <oxy:PlotView x:Name="plot1" IsMouseWheelEnabled="False"/>
                </Grid>

                <DockPanel Grid.Column="1" Margin="10">
                    <StackPanel>
                        <TextBlock Text="{Binding IsConnected}"/>
                        <UniformGrid Columns="2">
                            <HeaderedContentControl Header="X" Margin="5">
                                <TextBlock Text="{Binding Cx}"/>
                            </HeaderedContentControl>
                            <HeaderedContentControl Header="Y" Margin="5">
                                <TextBlock Text="{Binding Cy}"/>
                            </HeaderedContentControl>
                            <HeaderedContentControl Header="Z" Margin="5">
                                <TextBlock Text="{Binding Cz}"/>
                            </HeaderedContentControl>
                            <HeaderedContentControl Header="θ" Margin="5">
                                <TextBlock Text="{Binding Cc}"/>
                            </HeaderedContentControl>
                        </UniformGrid>
                        <Button Content="连接" Click="Button_Click_Connect" Margin="5"/>
                        <Button Content="断开" Click="Button_Click_DisConnect" Margin="5"/>
                        <Separator/>
                        <UniformGrid DockPanel.Dock="Top" Columns="2">
                            <HeaderedContentControl Header="目标X" Margin="5">
                                <TextBox Text="{Binding Tx}"/>
                            </HeaderedContentControl>
                            <HeaderedContentControl Header="目标Y" Margin="5">
                                <TextBox Text="{Binding Ty}"/>
                            </HeaderedContentControl>
                            <HeaderedContentControl Header="目标Z" Margin="5">
                                <TextBox Text="{Binding Tz}"/>
                            </HeaderedContentControl>
                            <HeaderedContentControl Header="目标θ" Margin="5">
                                <TextBox Text="{Binding Tc}"/>
                            </HeaderedContentControl>
                        </UniformGrid>
                        <Button Content="设置" Click="Button_Click_SetPos" Margin="5"/>
                        <Separator/>
                        <UniformGrid DockPanel.Dock="Top" Columns="2">
                            <HeaderedContentControl Header="起点（X）" Margin="5">
                                <TextBox Text="{Binding TstartX}"/>
                            </HeaderedContentControl>
                            <HeaderedContentControl Header="起点（Y）" Margin="5">
                                <TextBox Text="{Binding TstartY}"/>
                            </HeaderedContentControl>
                            <HeaderedContentControl Header="终点（X）" Margin="5">
                                <TextBox Text="{Binding TstopX}"/>
                            </HeaderedContentControl>
                            <HeaderedContentControl Header="终点（Y）" Margin="5">
                                <TextBox Text="{Binding TstopY}"/>
                            </HeaderedContentControl>
                            <HeaderedContentControl Header="点数（X）" Margin="5">
                                <TextBox Text="{Binding NumX}"/>
                            </HeaderedContentControl>
                            <HeaderedContentControl Header="点数（Y）" Margin="5">
                                <TextBox Text="{Binding NumY}"/>
                            </HeaderedContentControl>
                        </UniformGrid>

                        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
                            <TextBlock Text="标号选择:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <ComboBox ItemsSource="{Binding LayerOptions}" SelectedItem="{Binding SelectedLayer}" Width="100"/>
                        </StackPanel>

                        <Button Content="扫描" Click="Button_Click_Scan" Margin="5"/>
                        <Button Content="停止" Click="Button_Click_ScanStop" Margin="5"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                            <TextBlock Text="扫描面: " VerticalAlignment="Center"/>
                            <CheckBox IsChecked="{Binding IsFrontSide, Mode=TwoWay}" Style="{StaticResource ToggleSwitchStyle}"/>
                        </StackPanel>

                        <TextBlock Text="{Binding IsNScan}"/>
                        <Separator/>
                        <HeaderedContentControl Header="扫描时间（ms）" Margin="5">
                            <TextBox Text="{Binding ScnaDelayMs,Mode=TwoWay}"/>
                        </HeaderedContentControl>
                    </StackPanel>
                </DockPanel>
            </Grid>
        </DockPanel>
    </Border>
</Window>