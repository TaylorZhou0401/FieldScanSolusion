<Window x:Class="FieldScan.InstrumentConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="仪器连接设置" Height="340" Width="400" ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="IP 地址:" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="txtIpAddress" Grid.Column="1" Grid.ColumnSpan="2" Margin="5"/>

        <TextBlock Grid.Row="1" Text="端口:" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="txtPort" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" Margin="5"/>

        <TextBlock Grid.Row="2" Text="中心频率:" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="txtCenterFreq" Grid.Column="1" Grid.Row="2" Margin="5"/>
        <ComboBox x:Name="cmbCenterFreqUnit" Grid.Column="2" Grid.Row="2" Margin="0,5,5,5" Width="70">
            <sys:String>Hz</sys:String>
            <sys:String>KHz</sys:String>
            <sys:String>MHz</sys:String>
            <sys:String>GHz</sys:String>
        </ComboBox>

        <TextBlock Grid.Row="3" Text="频域宽度:" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="txtSpan" Grid.Column="1" Grid.Row="3" Margin="5"/>
        <ComboBox x:Name="cmbSpanUnit" Grid.Column="2" Grid.Row="3" Margin="0,5,5,5" Width="70">
            <sys:String>Hz</sys:String>
            <sys:String>KHz</sys:String>
            <sys:String>MHz</sys:String>
            <sys:String>GHz</sys:String>
        </ComboBox>

        <TextBlock Grid.Row="4" Text="频率点数:" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="txtPoints" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="4" Margin="5"/>

        <TextBlock Grid.Row="5" Text="参考电平 (dB):" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="txtRefLevel" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="5" Margin="5"/>

        <StackPanel Grid.Row="7" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="确认" Width="80" Margin="5" Click="ConfirmButton_Click"/>
            <Button Content="取消" Width="80" Margin="5" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>